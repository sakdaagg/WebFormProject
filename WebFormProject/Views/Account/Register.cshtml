@page
@model WebFormProject.Models.RegisterViewModel
@{

}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kayıt Ol</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-4 col-sm-8 col-10">
                <h4 class="text-center mb-3">Kayıt Ol</h4>
                <form asp-action="Register" asp-controller="Account" method="post" id="registerForm">
                    <div class="form-group mb-2 row">
                        <div class="col">
                            <label for="firstName" class="form-label-sm">Ad</label>
                            <input type="text" name="FirstName" class="form-control form-control-sm" id="firstName" placeholder="Adınız" required>
                        </div>
                        <div class="col">
                            <label for="lastName" class="form-label-sm">Soyad</label>
                            <input type="text" name="LastName" class="form-control form-control-sm" id="lastName" placeholder="Soyadınız" required>
                        </div>
                    </div>
                    <div class="form-group mb-2">
                        <label for="username" class="form-label-sm">Kullanıcı Adı</label>
                        <input type="text" name="Username" class="form-control form-control-sm" id="username" placeholder="Kullanıcı adınız" required>
                    </div>
                    <div class="form-group mb-2">
                        <label for="email" class="form-label-sm">Email</label>
                        <input type="email" name="Email" class="form-control form-control-sm" id="email" placeholder="Email adresiniz" required>
                    </div>
                    <div class="form-group mb-2">
                        <label for="password" class="form-label-sm">Şifre</label>
                        <input type="password" name="Password" class="form-control form-control-sm" id="password" placeholder="Şifreniz" required>
                    </div>
                    <div class="form-group mb-2">
                        <label for="confirmPassword" class="form-label-sm">Şifreyi Onayla</label>
                        <input type="password" name="ConfirmPassword" class="form-control form-control-sm" id="confirmPassword" placeholder="Şifrenizi onaylayın" required>
                    </div>
                    <button type="submit" class="btn btn-primary btn-sm w-100 mt-2">Kayıt Ol</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
